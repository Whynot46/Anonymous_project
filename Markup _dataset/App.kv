<Logo_card>:
    orientation:'horizontal'
    FloatLayout:
        MDIcon:
            icon:"hat-fedora"
            pos_hint:{"center_x":0.7,"center_y":0.52}
    MDLabel:
        text:"[color=#ffffff]White_hats[/color]"
        markup:True
        font_style: "Title"
        role: "medium"

<List_Item>:
    on_release:app.Dialog_open(root.mail_number)
    MDListItemLeadingIcon:
        icon:"mail"
    MDListItemHeadlineText:
        text: root.mail_number
    MDListItemSupportingText:
        text: root.data_text
    MDListItemTrailingIcon:
        icon: "open-in-new"

<Red_block>:
    style:"outlined"

